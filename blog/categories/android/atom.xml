</span><span class='line'>    <span class="kd">super</span><span class="o">.</span><span class="na">onScrolled</span><span class="o">(</span><span class="n">recyclerView</span><span class="o">,</span> <span class="n">dx</span><span class="o">,</span> <span class="n">dy</span><span class="o">);</span>
</span><span class='line'>    <span class="n">lastVisibleItem</span> <span class="o">=</span> <span class="n">mLayoutManager</span><span class="o">.</span><span class="na">findLastCompletelyVisibleItemPositions</span><span class="o">(</span><span class="kc">null</span><span class="o">);</span>
</span><span class='line'>    <span class="n">lastItem</span> <span class="o">=</span> <span class="n">Math</span><span class="o">.</span><span class="na">max</span><span class="o">(</span><span class="n">lastVisibleItem</span><span class="o">[</span><span class="mi">0</span><span class="o">],</span> <span class="n">lastVisibleItem</span><span class="o">[</span><span class="mi">1</span><span class="o">]);</span>
